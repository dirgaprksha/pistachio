{
  "name": "@pistachiojs/root",
  "private": true,
  "author": "Dirga Prakesha <dirga.prakesha@gmail.com>",
  "license": "MIT",
  "scripts": {
    "prepare": "husky",
    "build:types": "turbo run build:types",
    "build:types-core": "turbo run build:types --filter=@pistachiojs/core",
    "build:types-react": "turbo run build:types --filter=@pistachiojs/react",
    "build": "pnpm run build:types && turbo run build",
    "build:core": "pnpm run build:types-core && turbo run build --filter=@pistachiojs/core",
    "build:react": "pnpm run build:types-react && turbo run build --filter=@pistachiojs/react",
    "clean": "turbo run clean && rimraf node_modules",
    "format": "prettier --write \"**/*.{tsx,ts,md,cjs}\"",
    "lint": "eslint \"**/*.{tsx,ts}\"",
    "test": "vitest",
    "test:coverage": "vitest --coverage && node bin/generate-coverage-badge.mjs",
    "cg:add": "changeset",
    "cg:enter": "changeset pre enter dev",
    "cg:exit": "changeset pre exit",
    "cg:version": "changeset version",
    "cg:publish": "changeset publish"
  },
  "packageManager": "pnpm@8.9.0",
  "dependencies": {
    "@babel/preset-env": "^7.28.3",
    "@changesets/cli": "^2.29.8",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.1",
    "@types/node": "^24.9.1",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.7",
    "jsdom": "^25.0.1",
    "prettier": "^3.6.2",
    "rimraf": "^6.1.0",
    "rollup": "^4.52.5",
    "rollup-plugin-dts": "^6.2.3",
    "rollup-plugin-esbuild": "^6.2.1",
    "rollup-plugin-visualizer": "^6.0.5",
    "turbo": "^2.5.8",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  }
}
