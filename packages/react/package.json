{
  "name": "@pistachiojs/react",
  "description": "React hooks built on top of @pistachiojs/core for reactive programming tasks",
  "version": "0.1.1-dev.0",
  "author": "Dirga Prakesha <dirga.prakesha@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dirgaprksha/pistachio.git",
    "directory": "packages/react"
  },
  "keywords": [
    "utility",
    "typescript",
    "javascript",
    "helpers",
    "react",
    "type-safe",
    "tree-shakeable"
  ],
  "sideEffects": false,
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/index.js",
    "dist/index.esm.js",
    "dist/index.d.ts"
  ],
  "scripts": {
    "build": "rollup -c ../../rollup.config.mjs --environment TARGET:react",
    "build:types": "tsc --emitDeclarationOnly --declaration --declarationDir dist/types",
    "clean": "rimraf node_modules dist"
  },
  "peerDependencies": {
    "react": ">=17"
  },
  "dependencies": {
    "@pistachiojs/core": "workspace:*"
  },
  "devDependencies": {
    "@types/react": "^17.0.0"
  }
}
