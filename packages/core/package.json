{
  "name": "@pistachiojs/core",
  "description": "Framework-agnostic TypeScript utility library with pure functions for common programming tasks",
  "version": "0.2.0",
  "author": "Dirga Prakesha <dirga.prakesha@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dirgaprksha/pistachio.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/dirgaprksha/pistachio/issues"
  },
  "keywords": [
    "utility",
    "typescript",
    "javascript",
    "helpers",
    "functional",
    "framework-agnostic",
    "type-safe",
    "tree-shakeable",
    "zero-dependencies"
  ],
  "sideEffects": false,
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/index.js",
    "dist/index.esm.js",
    "dist/index.d.ts"
  ],
  "scripts": {
    "build": "rollup -c ../../rollup.config.mjs --environment TARGET:core",
    "build:types": "tsc --emitDeclarationOnly --declaration --declarationDir dist/types",
    "clean": "rimraf node_modules dist"
  }
}
